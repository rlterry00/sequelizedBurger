
<h1>Eat-Da-Burger</h1>

<img src="../assets/burger.png" alt="Burger" id="bImage">

<h2>Your Order:</h2>

<div id="burgers">
  <ul>

      {{#each burgers}}
        {{#unless this.devoured}}

          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">

              <input type="hidden" name="devoured" value="1">
              <button type="submit">Devour It</button>

            </form>

          </li>
        {{/unless}} 
      {{/each}} 
  </ul>

</div>

<div id="consumedBurgers">
<h2>Burgers You've Tried:</h2>
  <ul>

    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}
          <form action="/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit">DELETE</button>
          </form>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>

<div id="createABurger">
  <form action="/" method="POST">Create Your Own Burger:<input type="text" name="name"><input type="submit" value="Submit">
  </form>  
</div>